<h1><%= @recipe.name %></h1>

<div style="background-image: url('<%= @recipe.recipe_pic %>'); height: 50vh;"></div>

<p><%= @recipe.ingredients %></p>
<p><%= @recipe.method %></p>



<h3><%= @recipe.users.count %></h3>

<% if current_user.can_vote?(@recipe) && !current_user.is_chef? %>
  <form id="like-button" method="post" action="/recipes/<%= @recipe.id%>/like">
    <button type="submit" class="pure-button">Star</button>
  </form>
<% end %>
