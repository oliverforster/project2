<h1><%= @challenge.name %></h1>


<div class="pure-g">
  <div class="pure-u-2-24"></div>
  <div class="pure-u-20-24">
    <div class="pure-g">
    <% @recipes.each do |recipe| %>
      <div class="pure-u-1-3">
        <a class="button-warning pure-button" href="/recipes/<%= recipe.id %>">
          <div class="picture-show" style="background-image: url('<%= recipe.recipe_pic %>');"></div>
          <p><%= recipe.name %><br><%= recipe.chef.username %></p>
        </a>
      </div>
    <% end %>
    </div>
  </div>
  <div class="pure-u-2-24"></div>
</div>